<div class="relative overflow-x-auto w-full p-3 rounded-md bg-white border border-gray-300 mb-3">
	<h3 class="text-2xl font-bold mb-4">Recent Card Requests</h3>
	<table class="w-full text-sm text-left rtl:text-right text-gray-500">
		<thead class="text-gray-800 capitalize bg-blue-50">
			<tr>
				<th>Name</th>
				<th>Code</th>
				<th>Address</th>
				<th>Zone</th>
				<th>Date Added</th>
			</tr>
		</thead>
		<tbody>
			@foreach (var item in tableRows)
			{
				<tr class="bg-white border-b border-gray-300">
					<td>@item.Name</td>
					<td>@item.Code</td>
					<td>@item.Address</td>
					<td>@item.Zone</td>
					<td>@item.DateAdded </td>
				</tr>
			}
		</tbody>
	</table>
</div>

