<div class="bg-white p-3 rounded-md border border-gray-300 w-full md:w-[47%] lg:w-[24%]">
	<img src="@CardStatImg" class="mb-2 w-7 h-7" alt="@CardStatName" />
	<p class="text-gray-500 font-light text-lg">@CardStatName</p>
	<div class="flex justify-between items-center mt-3">
		<h3 class="text-2xl font-bold">@CardStat</h3>
		@if (RequiresAttention) {
			<div class="text-orange-500 font-light flex gap-1 items-center">
				<img src="/images/caution.svg" alt="Caution" />
				<p>Requires attention</p>
			</div>
		}
		else {
		<div class="flex gap-2 items-center">
			<div class="text-emerald-500 bg-emerald-50 px-3 py-1 rounded-sm flex gap-1 items-center">
				<img src="/images/green-arrow.svg" alt="Arrow" />
				<p>+<span>@CardStatRating</span>%</p>
			</div>

			<p class="text-gray-500 font-light"> this month </p>
		</div>
		}
	</div>
</div>


@code {
	[Parameter]
	public string CardStatName { get; set; }

	[Parameter]
	public string CardStat { get; set; }

	[Parameter]
	public string CardStatImg { get; set; }

	[Parameter]
	public double? CardStatRating { get; set; } = null;

	[Parameter]
	public bool RequiresAttention { get; set; } = false;

	[Parameter]
	public string? CardStatPeriod { get; set; }
}
